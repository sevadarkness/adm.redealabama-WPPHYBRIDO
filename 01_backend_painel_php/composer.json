{
    "name": "redealabama/painel",
    "description": "Painel administrativo Rede Alabama - V27 Ultra (camadas, .env, testes, CI-ready)",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RedeAlabama\\": "app/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpstan analyse app",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    }
}