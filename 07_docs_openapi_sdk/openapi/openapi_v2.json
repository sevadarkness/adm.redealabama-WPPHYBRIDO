    "/api/v2/sales_ia_offers.php": {
      "post": {
        "summary": "IA Vendedora PRO - gerar oferta e registrar aceite",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "generate",
                "accept"
              ]
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "generate"
                        ]
                      },
                      "cliente_id": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "thread_id": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "cliente_id",
                      "thread_id"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "accept"
                        ]
                      },
                      "log_id": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "ticket_gerado": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "log_id"
                    ]
                  }
                ],
                "description": "Pode enviar action via query (?action=generate) ou no body (campo action)."
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
